<link rel="stylesheet" href="/css/style.css">
<div class="layout">
  {% include header.liquid %}

  <div class="row">{% include aside.liquid %}
    <div>
      <h3>About</h3>
      {{ me.bio }} 
    </div>
  </div>

  <div class="history row">
    <div class="history">
      <h3>Work History</h3>
      <ul>
        {% for work in me.work %}
          <li>
            <span class="dot-double"></span>
            <div>
              <h4>{{ work.company }}</h4>
              <p>{{ work.title }}</p>
              <p class="dates">{{ work.dates }}</p>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="history">
      <h3>Education History</h3>
      <ul>
        {% for education in me.education %}
          <li>
            <span class="dot-double"></span>
            <div>
              <h4>{{ education.school }}</h4>
              <p>{{ education.study }}</p>
              <p class="dates">{{ education.dates }}</p>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="personalities row">
    <div>
      <h3>Enneagram</h3>
      {{ me.personality.enneagram}}
    </div>
    <div>
      <h3>Briggs-Myers</h3>
      {{ me.personality.briggsMyers}}
    </div>
    <div>
      <h3>Strengths Finder</h3>
      <ol>
        {% for strength in me.personality.strengthsFinder %}
          <li>{{ strength }}</li>
        {% endfor %}
      </ol>
    </div>
    <div>
      <h3>Working Genius</h3>
      <ol>
        {% for genius in me.personality.workingGenius %}
          <li>{{ genius }}</li>
        {% endfor %}
      </ol>
    </div>
  </div>
</div>
