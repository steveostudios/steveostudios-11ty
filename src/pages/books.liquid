        } else {
          book.classList.add('hide');
        }
      }
    });
  });

  fourStar.addEventListener('click', () => {
    const books = document.querySelectorAll('.book');
    books.forEach(book => {
      if (book.classList.contains('four-star')) {
        if (fourStar.checked) {
          book.classList.remove('hide');
        } else {
          book.classList.add('hide');
        }
      }
    });
  });

  threeStar.addEventListener('click', () => {
    const books = document.querySelectorAll('.book');
    books.forEach(book => {
      if (book.classList.contains('three-star')) {
        if (threeStar.checked) {
          book.classList.remove('hide');
        } else {
          book.classList.add('hide');
        }
      }
    });
  });

  twoStar.addEventListener('click', () => {
    const books = document.querySelectorAll('.book');
    books.forEach(book => {
      if (book.classList.contains('two-star')) {
        if (twoStar.checked) {
          book.classList.remove('hide');
        } else {
          book.classList.add('hide');
        }
      }
    });
  });

  oneStar.addEventListener('click', () => {
    const books = document.querySelectorAll('.book');
    books.forEach(book => {
      if (book.classList.contains('one-star')) {
        if (oneStar.checked) {
          book.classList.remove('hide');
        } else {
          book.classList.add('hide');
        }
      }
    });
  });


  clear.addEventListener('click', () => {
    fiction.checked = true;
    nonFiction.checked = true;
    const books = document.querySelectorAll('.book');
    books.forEach(book => {
      book.classList.remove('hide');
    });
  });

</script>