---
title: "Steve Stone"
layout: base.liquid
---
<div class="row about">{% include aside.liquid %}
  <div>
    <h3>About</h3>
    {{ me.bio }}
  </div>
</div>

<div class="history row">
  <div class="history">
    <h3>Work History</h3>
    <ul>
      {% for work in me.work %}
      <li>
        <span class="dot-double"></span>
        <div>
          <h4>{{ work.company }}</h4>
          <p>{{ work.title }}</p>
          <p class="dates">{{ work.dates }}</p>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
  <div class="history">
    <h3>Education History</h3>
    <ul>
      {% for education in me.education %}
      <li>
        <span class="dot-double"></span>
        <div>
          <h4>{{ education.school }}</h4>
          <p>{{ education.study }}</p>
          <p class="dates">{{ education.dates }}</p>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>

<div class="personalities row">
  <div>
    <h3>Enneagram</h3>
    {% include img/icons/enneagram.svg %}
    <span>{{ me.personality.enneagram}}</span>
  </div>
  <div>
    <h3>Briggs-Myers</h3>
    {% include img/icons/briggsMyers.svg %}
    <span>{{ me.personality.briggsMyers}}</span>
  </div>
  <div>
    <h3>Strengths Finder</h3>
    {% include img/icons/strengthsFinder.svg %}
    <ol>
      {% for strength in me.personality.strengthsFinder %}
      <li>{{ strength }}</li>
      {% endfor %}
    </ol>
  </div>
  <div class="workingGenius">
    <h3>Working Genius</h3>
    {% include img/icons/workingGenius.svg %}
    <ol>
      {% for genius in me.personality.workingGenius %}
      <li>{{ genius }}</li>
      {% endfor %}
    </ol>
  </div>
</div>